    const cardsContainer = document.getElementById('cards-container');
    const viewMoreBtn = document.getElementById('view-more-btn');
    
    function createCard(recipe) {
        const card = document.createElement('div');
        card.className = 'card';
        card.setAttribute('data-toggle', 'modal');
        card.setAttribute('data-target', '#recipeModal');
        card.setAttribute('data-recipe-name', recipe.name);

        const img = document.createElement('img');
        img.className = 'food-image';
        img.src = recipe.imageUrl;
        img.alt = recipe.name;

        const nameDiv = document.createElement('div');
        nameDiv.textContent = recipe.name;
        
        card.appendChild(img);
        card.appendChild(nameDiv);
        cardsContainer.appendChild(card);
    }

    const initialRecipeNames = ['Chicken Biriyani', 'Classic Burger', 'Grilled Fish with Lemon & Herbs', 'Avocado Chocolate Mousse', 'Margherita Pizza', 'Mumbai-Style Vada Pav'];
    const moreRecipeNames = ['Pasta Aglio e Olio', 'Quick Chicken Tacos', 'Simple California Roll', 'Classic Greek Salad', 'Classic Potato Samosa'];
    
    initialRecipeNames.forEach(name => createCard(recipeDatabase[name]));

    viewMoreBtn.addEventListener('click', () => {
      moreRecipeNames.forEach(name => createCard(recipeDatabase[name]));
      viewMoreBtn.style.display = 'none';
    });
    
    $('#recipeModal').on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget);
        const recipeName = button.data('recipe-name');
        const recipeData = recipeDatabase[recipeName];
        
        const modal = $(this);
        
        if (recipeData) {
            modal.find('.modal-title').text(recipeData.name);
            modal.find('#modal-recipe-image').attr('src', recipeData.imageUrl.replace('w=120&h=120', 'w=800&h=600'));
            
            const ingredientsList = modal.find('#modal-recipe-ingredients');
            ingredientsList.empty();
            recipeData.ingredients.forEach(ingredient => {
                ingredientsList.append(`<li>- ${ingredient}</li>`);
            });

            const procedureList = modal.find('#modal-recipe-procedure');
            procedureList.empty();
            recipeData.procedure.forEach(step => {
                procedureList.append(`<li>${step}</li>`);
            });
        }
    });
  </script>
